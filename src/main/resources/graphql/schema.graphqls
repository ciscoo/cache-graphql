type CustomerInfo {
    firstName: String!,
    lastName: String!
}

type Customer {
    id: Int!,
    info: CustomerInfo!,
}

type AltogetherCustomer {
    id: Int!,
    info: CustomerInfo!,
}

type IdealCustomer {
    id: Int!,
    firstName: String!,
    lastName: String!
}

type Query {
    customer(input: CustomerIdentifierInput): Customer!
    idealCustomer(input: CustomerIdentifierInput): IdealCustomer!
    altogetherCustomer(input: CustomerIdentifierInput): AltogetherCustomer!
}
